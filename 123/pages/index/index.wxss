.container {
  padding: 40rpx 20rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.score-info {
  font-size: 36rpx;
  margin-bottom: 40rpx;
  color: #333;
}

.play-btn {
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.instructions {
  margin-top: 80rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  border: 4rpx solid #FFD700;
  border-radius: 20rpx;
  padding: 20rpx;
}

.instructions-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.instructions-text {
  font-size: 30rpx;
  margin: 10rpx 0;
} 