<view class="container">
  <view class="header">
    <image class="logo" src="/images/mole.png" mode="aspectFit"></image>
    <view class="title">打地鼠</view>
  </view>
  
  <view class="content">
    <view class="score-info">
      <text>最高分: {{highScore}}</text>
    </view>
    
    <button class="btn play-btn" bindtap="startGame">开始游戏</button>
    
    <view class="instructions">
      <text class="instructions-title">游戏说明：</text>
      <text class="instructions-text">1. 点击出现的地鼠得分</text>
      <text class="instructions-text">2. 在限定时间内获得尽可能高的分数</text>
      <text class="instructions-text">3. 小心别打到炸弹！</text>
    </view>
  </view>
</view> 